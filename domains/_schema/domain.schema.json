{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Domain Definition Schema - Expert Mode",
    "type": "object",
    "required": [
        "keywords",
        "stakeholders",
        "sensitive_data"
    ],
    "properties": {
        "keywords": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Keywords for auto-detection"
        },
        "knowledge_base": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Deep domain knowledge pointers or textual context"
        },
        "architecture_patterns": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Allowed architecture patterns (e.g., microservices, event-driven, hexagonal)"
        },
        "security_standards": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Specific security standards (e.g., CERT-C, MISRA, OWASP-ASVS)"
        },
        "stakeholders": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "enum": [
                            "end_user",
                            "professional",
                            "internal",
                            "governance",
                            "business_partner"
                        ]
                    },
                    "data_access": {
                        "type": "string"
                    }
                }
            }
        },
        "sensitive_data": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "level"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "level": {
                        "enum": [
                            "critical",
                            "high",
                            "medium",
                            "low"
                        ]
                    },
                    "encryption": {
                        "enum": [
                            "required",
                            "recommended",
                            "optional"
                        ]
                    }
                }
            }
        },
        "data_classification": {
            "type": "object",
            "properties": {
                "critical": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "high": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "medium": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "low": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}