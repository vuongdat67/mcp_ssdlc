{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Domain Definition Schema - Expert Mode",
    "type": "object",
    "required": [
        "keywords",
        "stakeholders",
        "sensitive_data"
    ],
    "properties": {
        "keywords": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Keywords for auto-detection"
        },
        "knowledge_base": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Deep domain knowledge pointers or textual context"
        },
        "architecture_patterns": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Allowed architecture patterns (e.g., microservices, event-driven, hexagonal)"
        },
        "security_standards": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Specific security standards (e.g., CERT-C, MISRA, OWASP-ASVS)"
        },
        "stakeholders": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "enum": [
                            "end_user",
                            "professional",
                            "internal",
                            "governance",
                            "business_partner"
                        ]
                    },
                    "data_access": {
                        "type": "string"
                    }
                }
            }
        },
        "sensitive_data": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "level"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "level": {
                        "enum": [
                            "critical",
                            "high",
                            "medium",
                            "low"
                        ]
                    },
                    "encryption": {
                        "enum": [
                            "required",
                            "recommended",
                            "optional"
                        ]
                    }
                }
            }
        },
        "data_classification": {
            "type": "object",
            "properties": {
                "critical": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "high": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "medium": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "low": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "domain_specific_requirements": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Domain-specific technical requirements (e.g., 'MUST use X3DH for key exchange')"
        },
        "technical_constraints": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["type", "description"],
                "properties": {
                    "type": {
                        "enum": ["performance", "scale", "latency", "throughput", "availability", "reliability"]
                    },
                    "description": {
                        "type": "string"
                    },
                    "threshold": {
                        "type": "string"
                    }
                }
            },
            "description": "Technical constraints with measurable thresholds"
        },
        "recommended_tech_stack": {
            "type": "object",
            "properties": {
                "languages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "frameworks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "libraries": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "deployment": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "description": "Recommended technology stack for this domain"
        },
        "data_flows": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "steps"],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "steps": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "security_controls": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "description": "Critical data flows with security controls"
        },
        "integration_points": {
            "type": "object",
            "properties": {
                "external_apis": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {"type": "string"},
                            "protocol": {"type": "string"},
                            "auth": {"type": "string"},
                            "purpose": {"type": "string"}
                        }
                    }
                },
                "message_queues": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "databases": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "description": "External integration points and dependencies"
        }
    }
}